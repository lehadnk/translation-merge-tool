{
    "name": "lehadnk/translation-merge-tool",
    "description": "The tool for generation and merge of translation files.",
    "version": "1.6.1",
    "authors": [
        {
            "name": "Alexey Zauzin",
            "email": "lehadnk@gmail.com"
        }
    ],
    "bin": [
        "bin/i18n_mrg"
    ],
    "require": {
        "php": "^8.1",
        "ext-mbstring": "*",
        "ext-json": "*",
        "ext-readline": "*",
        "gettext/gettext": "^4.6",
        "guzzlehttp/guzzle": "~7.8",
        "splitbrain/php-cli": "^1.1",
        "json-mapper/json-mapper": "^2.16"
    },
    "require-dev": {
        "phpunit/phpunit": "^8"
    },
    "autoload": {
        "psr-4": {
            "TranslationMergeTool\\": "src/",
            "UnitTests\\": "tests/unit/"
        }
    }
}
