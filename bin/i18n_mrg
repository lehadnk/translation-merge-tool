#!/usr/bin/env php
<?php

$vendor_path = $_composer_autoload_path ?? __DIR__ . '/../vendor/autoload.php';
if (!file_exists($vendor_path)) {
    die("Can't manage to load autoload.php!");
}

include $vendor_path;

$workingDir = getcwd();
$app = new \TranslationMergeTool\App($workingDir);
$app->run();
